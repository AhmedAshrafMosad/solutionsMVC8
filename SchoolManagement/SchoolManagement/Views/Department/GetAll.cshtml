@model List<SchoolManagement.ViewModels.DepartmentViewModel>
@{
    ViewData["Title"] = "All Departments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-building me-2"></i>Departments Management
        </h2>
        <a asp-controller="Department" asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>Add New Department
        </a>
    </div>

    <!-- Search Form -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-8">
            <input type="text" name="searchName" value="@Context.Request.Query["searchName"]"
                   class="form-control" placeholder="Search by department name..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-search me-1"></i>Search
            </button>
            <a asp-controller="Department" asp-action="GetAll" class="btn btn-secondary">
                <i class="bi bi-arrow-clockwise me-1"></i>Reset
            </a>
        </div>
    </form>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Departments Grid -->
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var department in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card department-card h-100 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-building me-2"></i>@department.Name
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="department-info">
                                <p class="card-text">
                                    <strong>Manager:</strong> @department.MgrName
                                </p>
                                <div class="department-stats">
                                    <div class="row text-center">
                                        <div class="col-12">
                                            <div class="stat-item">
                                                <h4 class="text-success mb-0">@department.StudentCount</h4>
                                                <small class="text-muted">Students</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @if (department.Students.Any())
                                {
                                    <div class="mt-3">
                                        <small class="text-muted">Recent Students:</small>
                                        <div class="mt-1">
                                            @foreach (var student in department.Students.Take(3))
                                            {
                                                <span class="badge bg-light text-dark me-1 mb-1">@student.Name</span>
                                            }
                                            @if (department.Students.Count > 3)
                                            {
                                                <span class="badge bg-secondary">+@(department.Students.Count - 3) more</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <!-- FIXED: Explicit controller specification -->
                                <a asp-controller="Department" asp-action="GetById" asp-route-id="@department.Id"
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id"
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id"
                                   class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-building text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No Departments Found</h4>
            <p class="text-muted">No departments match your search criteria.</p>
            <a asp-controller="Department" asp-action="Add" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle me-1"></i>Add First Department
            </a>
        </div>
    }
</div>

<style>
    .department-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border-radius: 10px;
    }

        .department-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

    .stat-item {
        padding: 10px 0;
    }

        .stat-item h4 {
            font-weight: 700;
        }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
    }
</style>