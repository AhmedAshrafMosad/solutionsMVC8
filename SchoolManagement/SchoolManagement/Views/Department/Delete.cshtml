@model SchoolManagement.ViewModels.DepartmentViewModel
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Department
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon me-2"></i>Warning!
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this department? This action cannot be undone and will affect all related data.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Department Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Manager:</dt>
                        <dd class="col-sm-9">@Model.MgrName</dd>

                        <dt class="col-sm-3">Department State:</dt>
                        <dd class="col-sm-9">@Model.DepartmentState</dd>
                    </dl>

                    <!-- Related Data Warning -->
                    <div class="alert alert-danger">
                        <h6 class="alert-heading">
                            <i class="bi bi-trash me-2"></i>This will also affect:
                        </h6>
                        <ul class="mb-0 mt-2">
                            <li>@Model.StudentCount students in this department</li>
                            <li>All courses associated with this department</li>
                            <li>All teacher assignments to this department</li>
                        </ul>
                    </div>

                    @if (Model.Students.Any())
                    {
                        <div class="alert alert-info">
                            <h6 class="alert-heading">Students in this department:</h6>
                            <div class="mt-2">
                                @foreach (var student in Model.Students.Take(5))
                                {
                                    <span class="badge bg-light text-dark me-1 mb-1">@student.Name</span>
                                }
                                @if (Model.Students.Count > 5)
                                {
                                    <span class="badge bg-secondary">and @(Model.Students.Count - 5) more students</span>
                                }
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Yes, Delete Department
                            </button>
                            <a asp-action="GetAll" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>