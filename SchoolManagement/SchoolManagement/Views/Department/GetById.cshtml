@model SchoolManagement.ViewModels.DepartmentViewModel
@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-building me-2"></i>Department Details
                        </h4>
                        <div>
                            <span class="badge bg-primary me-2">@Model.StudentCount Students</span>
                            <span class="badge bg-secondary">@Model.DepartmentState</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Department Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">
                                <i class="bi bi-info-circle me-2"></i>Department Information
                            </h5>
                            <dl class="row">
                                <dt class="col-sm-4">Department ID:</dt>
                                <dd class="col-sm-8">#@Model.Id</dd>

                                <dt class="col-sm-4">Department Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Manager:</dt>
                                <dd class="col-sm-8">@Model.MgrName</dd>

                                <dt class="col-sm-4">Department State:</dt>
                                <dd class="col-sm-8">@Model.DepartmentState</dd>

                                <dt class="col-sm-4">Security Case:</dt>
                                <dd class="col-sm-8">@Model.SecurityCase</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">
                                <i class="bi bi-graph-up me-2"></i>Statistics
                            </h5>
                            <div class="row text-center">
                                <div class="col-12">
                                    <div class="border rounded p-3 bg-light">
                                        <h3 class="text-success mb-0">@Model.StudentCount</h3>
                                        <small class="text-muted">Total Students</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Students List -->
                    @if (Model.Students.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="border-bottom pb-2">
                                    <i class="bi bi-people me-2"></i>Students in this Department
                                    <span class="badge bg-primary ms-2">@Model.Students.Count</span>
                                </h5>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Student Name</th>
                                                <th>Age</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in Model.Students)
                                            {
                                                <tr>
                                                    <td>@student.Name</td>
                                                    <td>@student.Age</td>
                                                    <td>
                                                        <a href="@Url.Action("GetById", "Student", new { id = student.Id })"
                                                           class="btn btn-info btn-sm">
                                                            <i class="bi bi-eye me-1"></i>View
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>No students are currently enrolled in this department.
                        </div>
                    }

                    <!-- Quick Actions -->
                    <div class="alert alert-info mt-4">
                        <h6 class="alert-heading">
                            <i class="bi bi-lightbulb me-2"></i>Quick Actions
                        </h6>
                        <div class="mt-2">
                            <a href="@Url.Action("GetAll", "Student", new { departmentId = Model.Id })"
                               class="btn btn-outline-success btn-sm me-2">
                                <i class="bi bi-person me-1"></i>View All Students
                            </a>
                            <a href="@Url.Action("GetAll", "Course", new { departmentId = Model.Id })"
                               class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-book me-1"></i>View Courses
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Edit Department
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Department
                        </a>
                        <a asp-action="GetAll" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>