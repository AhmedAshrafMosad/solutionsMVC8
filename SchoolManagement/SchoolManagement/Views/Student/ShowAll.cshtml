@model List<SchoolManagement.Models.Student>
@{
    ViewData["Title"] = "All Students";
}

<div class="container">
    <h2>All Students</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Department</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>@student.Department?.Name</td>
                            <td>
                                <a asp-action="ShowDetails" asp-route-id="@student.Id" class="btn btn-sm btn-info">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No students found</h4>
            <p>No students are currently registered in the system.</p>
        </div>
    }
</div>