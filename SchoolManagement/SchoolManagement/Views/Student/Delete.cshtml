@model SchoolManagement.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
            background: linear-gradient(135deg, #dc3545, #c82333);
        }

        .warning-icon {
            font-size: 4rem;
            color: #dc3545;
        }
    </style>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Student
                    </h4>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="warning-icon mb-3">
                        <i class="bi bi-exclamation-octagon"></i>
                    </div>

                    <div class="alert alert-warning">
                        <h5 class="alert-heading">Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this student? This action cannot be undone.</p>
                    </div>

                    <div class="card info-card mb-4">
                        <div class="card-body text-start">
                            <h6 class="card-title text-danger">Student Information</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Student Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">@Model.Age years</dd>

                                <dt class="col-sm-4">Department:</dt>
                                <dd class="col-sm-8">@Model.Department?.Name</dd>

                                <dt class="col-sm-4">Student ID:</dt>
                                <dd class="col-sm-8">#@Model.Id</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.StuCrsRes.Any())
                    {
                        <div class="alert alert-info text-start">
                            <i class="bi bi-info-circle me-2"></i>
                            This student is enrolled in <strong>@Model.StuCrsRes.Count course(s)</strong>.
                            All course records will also be deleted.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-trash me-1"></i>Yes, Delete Student
                            </button>
                            <a href="@Url.Action("GetAll")" class="btn btn-secondary btn-lg px-4">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>