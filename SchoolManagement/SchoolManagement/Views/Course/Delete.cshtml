@model SchoolManagement.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .alert-warning {
            border-left: 4px solid #ffc107;
        }
    </style>
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Course
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-exclamation-octagon me-2"></i>Warning!
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this course? This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Course Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Degree Level:</dt>
                        <dd class="col-sm-9">@Model.Degree</dd>

                        <dt class="col-sm-3">Manager:</dt>
                        <dd class="col-sm-9">@Model.MgrName</dd>

                        <dt class="col-sm-3">Department:</dt>
                        <dd class="col-sm-9">@Model.Department?.Name</dd>
                    </dl>

                    @if (Model.StuCrsRes.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            This course has @Model.StuCrsRes.Count enrolled student(s).
                            All enrollment records will also be deleted.
                        </div>

                        <div class="mt-3">
                            <h6>Enrolled Students:</h6>
                            <ul class="list-group">
                                @foreach (var enrollment in Model.StuCrsRes.Take(5))
                                {
                                    <li class="list-group-item">
                                        @enrollment.Student?.Name - Grade: @enrollment.Grade
                                    </li>
                                }
                                @if (Model.StuCrsRes.Count > 5)
                                {
                                    <li class="list-group-item text-muted">
                                        ... and @(Model.StuCrsRes.Count - 5) more students
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            This course has no enrolled students.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Yes, Delete Course
                            </button>
                            <a asp-action="GetAll" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>