@model SchoolManagement.Models.Course
@{
    ViewData["Title"] = "Course Details";
}

@section Styles {
    <style>
        .card {
            border-radius: 10px;
            border: none;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .badge-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .badge-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        }

        .table th {
            border-top: none;
            font-weight: 600;
        }
    </style>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-book me-2"></i>Course Details
                        </h4>
                        <div>
                            <span class="badge @(Model.StuCrsRes.Any() ? "badge-success" : "badge-warning") me-2">
                                @Model.StuCrsRes.Count Students
                            </span>
                            <span class="badge bg-secondary">@Model.Degree</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Course Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">Course Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Course ID:</dt>
                                <dd class="col-sm-8">#@Model.Id</dd>

                                <dt class="col-sm-4">Course Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Degree Level:</dt>
                                <dd class="col-sm-8">@Model.Degree</dd>

                                <dt class="col-sm-4">Course Manager:</dt>
                                <dd class="col-sm-8">@Model.MgrName</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h5 class="border-bottom pb-2">Department Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Department:</dt>
                                <dd class="col-sm-8">@Model.Department?.Name</dd>

                                <dt class="col-sm-4">Department Manager:</dt>
                                <dd class="col-sm-8">@Model.Department?.MgrName</dd>

                                <dt class="col-sm-4">Total Students:</dt>
                                <dd class="col-sm-8">@Model.Department?.Students.Count</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Student Enrollments -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-people me-2"></i>Student Enrollments
                                <span class="badge bg-primary ms-2">@Model.StuCrsRes.Count</span>
                            </h5>

                            @if (Model.StuCrsRes.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Student Name</th>
                                                <th>Department</th>
                                                <th>Grade</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var enrollment in Model.StuCrsRes)
                                            {
                                                var isPassing = new[] { "A", "B", "C", "D", "A+", "A-", "B+", "B-", "C+", "C-" }
                                                .Contains(enrollment.Grade?.ToUpper() ?? "");

                                                <tr>
                                                    <td>@enrollment.Student?.Name</td>
                                                    <td>@enrollment.Student?.Department?.Name</td>
                                                    <td>
                                                        <span class="badge @(isPassing ? "bg-success" : "bg-danger")">
                                                            @enrollment.Grade
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @if (isPassing)
                                                        {
                                                            <span class="text-success">
                                                                <i class="bi bi-check-circle me-1"></i>Passed
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-danger">
                                                                <i class="bi bi-x-circle me-1"></i>Failed
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Statistics -->
                                <div class="row mt-4">
                                    <div class="col-md-3">
                                        <div class="card bg-primary text-white text-center">
                                            <div class="card-body py-3">
                                                <h6 class="card-title">Total Students</h6>
                                                <h4>@Model.StuCrsRes.Count</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-success text-white text-center">
                                            <div class="card-body py-3">
                                                <h6 class="card-title">Passed</h6>
                                                <h4>@Model.StuCrsRes.Count(e => new[] { "A", "B", "C", "D", "A+", "A-", "B+", "B-", "C+", "C-" }.Contains(e.Grade?.ToUpper() ?? ""))</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card bg-danger text-white text-center">
                                            <div class="card-body py-3">
                                                <h6 class="card-title">Failed</h6>
                                                <h4>@Model.StuCrsRes.Count(e => !new[] { "A", "B", "C", "D", "A+", "A-", "B+", "B-", "C+", "C-" }.Contains(e.Grade?.ToUpper() ?? ""))</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        @{
                                            var avgGrade = Model.StuCrsRes.Any() ?
                                            Model.StuCrsRes.Average(e =>
                                            e.Grade?.ToUpper() switch
                                            {
                                                "A+" => 4.3,
                                                "A" => 4.0,
                                                "A-" => 3.7,
                                                "B+" => 3.3,
                                                "B" => 3.0,
                                                "B-" => 2.7,
                                                "C+" => 2.3,
                                                "C" => 2.0,
                                                "C-" => 1.7,
                                                "D+" => 1.3,
                                                "D" => 1.0,
                                                "D-" => 0.7,
                                                _ => 0.0
                                            }
                                            ) : 0.0;
                                        }
                                        <div class="card bg-info text-white text-center">
                                            <div class="card-body py-3">
                                                <h6 class="card-title">Average GPA</h6>
                                                <h4>@avgGrade.ToString("0.00")</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info text-center">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No students are currently enrolled in this course.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Edit Course
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Course
                        </a>
                        <a asp-action="GetAll" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>